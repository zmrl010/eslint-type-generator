{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "emit": true,
    "swc": true
  },
  "include": ["src", "types", "bin"]
}
